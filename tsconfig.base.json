{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app-api": ["packages/app-api/src/index.ts"],
      "@articles-api": ["packages/articles-api/src/index.ts"],
      "@articles-ui": ["packages/articles-ui/src/index.ts"],
      "@shared-api-db": ["packages/shared-api-repository/src/index.ts"],
      "@shared-interfaces": ["packages/shared-interfaces/src/index.ts"],
      "@shared-ui-components": ["packages/shared-ui-components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
